<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardTask"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    app:cardElevation="8dp"
    app:cardBackgroundColor="#B3FFFFFF"
    app:strokeWidth="1dp"
    app:strokeColor="#33FFFFFF"
    app:cardCornerRadius="16dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:outlineAmbientShadowColor="#1A000000"
    android:outlineSpotShadowColor="#26000000">

    <!-- Glassmorphism overlay -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/glassmorphism_overlay"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <!-- Task Title with improved styling -->
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvTaskTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sample Task"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#E6111827"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="12dp"
            android:shadowColor="#40FFFFFF"
            android:shadowDx="0"
            android:shadowDy="1"
            android:shadowRadius="2"/>

        <!-- Improved divider line with glassmorphism -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#A4D2E9"
            android:layout_marginBottom="5dp"/>

        <!-- Task Description with better typography -->
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvTaskDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sample description"
            android:textSize="14sp"
            android:textColor="#CC6B7280"
            android:lineSpacingMultiplier="1.4"
            android:layout_marginBottom="10dp" />

        <!-- Due Date and Priority Container with improved layout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="20dp">

            <TextView
                android:id="@+id/tvDueDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Due: 0/0/0"
                android:textSize="13sp"
                android:textColor="#B36B7280"
                android:fontFamily="sans-serif"
                android:drawablePadding="6dp"
                android:gravity="center_vertical"/>

            <TextView
                android:id="@+id/tvPriority"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Priority: Low"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:background="@drawable/priority_low_glass_bg"
                android:paddingHorizontal="12dp"
                android:paddingVertical="6dp"
                android:layout_gravity="end"/>
        </LinearLayout>

        <!-- Subtle divider before buttons -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#26FFFFFF"
            android:layout_marginBottom="5dp"/>

        <!-- Action Buttons Container with improved styling -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">

            <!-- Edit Button with glassmorphism design -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnEdit"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="Edit"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#E66366F1"
                android:textAllCaps="false"
                style="@style/Widget.Material3.Button.TextButton"
                app:cornerRadius="18dp"
                app:rippleColor="#40E0E7FF"
                android:paddingHorizontal="16dp"
                android:layout_marginEnd="8dp"
                android:minWidth="0dp"
                android:background="@drawable/glass_button_bg"/>

            <!-- Delete Button with glassmorphism design -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDelete"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="Delete"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#E6EF4444"
                android:textAllCaps="false"
                style="@style/Widget.Material3.Button.TextButton"
                app:cornerRadius="18dp"
                app:rippleColor="#40FEE2E2"
                android:paddingHorizontal="16dp"
                android:minWidth="0dp"
                android:background="@drawable/glass_button_bg"/>
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>