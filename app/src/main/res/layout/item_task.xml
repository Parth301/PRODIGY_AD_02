<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardTask"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="#FFFFFF"
    app:strokeWidth="1dp"
    app:strokeColor="#E5E7EB"
    app:cardCornerRadius="12dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <!-- Task Title with improved styling -->
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvTaskTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sample Task"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#111827"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="12dp"/>

        <!-- Improved divider line -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E5E7EB"
            android:layout_marginBottom="5dp"/>

        <!-- Task Description with better typography -->
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvTaskDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sample description"
            android:textSize="14sp"
            android:textColor="#6B7280"
            android:lineSpacingMultiplier="1.4"
            android:layout_marginBottom="10dp" />

        <!-- Due Date and Priority Container with improved layout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="20dp">

            <TextView
                android:id="@+id/tvDueDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Due: 0/0/0"
                android:textSize="13sp"
                android:textColor="#6B7280"
                android:fontFamily="sans-serif"
                android:drawablePadding="6dp"
                android:gravity="center_vertical"/>

            <TextView
                android:id="@+id/tvPriority"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Priority: Low"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:background="@drawable/priority_low_bg"
                android:paddingHorizontal="12dp"
                android:paddingVertical="6dp"
                android:layout_gravity="end"/>
        </LinearLayout>

        <!-- Subtle divider before buttons -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#F3F4F6"
            android:layout_marginBottom="5dp"/>

        <!-- Action Buttons Container with improved styling -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">

            <!-- Edit Button with improved design -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnEdit"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="Edit"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#6366F1"
                android:textAllCaps="false"
                style="@style/Widget.Material3.Button.TextButton"
                app:cornerRadius="18dp"
                app:rippleColor="#E0E7FF"
                android:paddingHorizontal="16dp"
                android:layout_marginEnd="8dp"
                android:minWidth="0dp"/>

            <!-- Delete Button with improved design -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDelete"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="Delete"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#EF4444"
                android:textAllCaps="false"
                style="@style/Widget.Material3.Button.TextButton"
                app:cornerRadius="18dp"
                app:rippleColor="#FEE2E2"
                android:paddingHorizontal="16dp"
                android:minWidth="0dp"/>
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>